<div class="row row-centered user">
  <div class="col-md-4 col-md-offset-4">
    <p>Almost done ! We just need an email to send you your links</p>
    <%= form_for(@user, html: {class: 'form-horizontal'}) do |f| %>
    
      <%= render 'layouts/errors', object: @user %>
    
      <div class="field form-group">
        <%= f.text_field :email, placeholder: "your email", class: 'form-control' %>
      </div>
      <div class="actions form-group">
        <%= f.submit "Validate", class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>