<div class="panel panel-default">
  <div class="panel-body">
    <h4>Pending invitations :</h4>
    <ul class="list-inline">
    <% if @pending_invites.blank?%> <p>No pending invitations</p> <% end %>
    <% @pending_invites.each do |invite| %>
      <li>
       <%= invite.email %>
      </li>
    <% end %>
    </ul>
  </div>
</div>