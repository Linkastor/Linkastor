<div class="row form">
  <div class="col-md-4 col-md-offset-4">
    <p class="form-title">Create a group and invite people to join ! </p>
    <%= form_for(@group, html: {class: 'form-horizontal'}) do |f| %>
    
      <%= render 'layouts/errors', object: @group %>
    
      <div class="field form-group">
        <label for="name">Give a name to your group</label>
        <%= f.text_field :name, placeholder: "Name your group", class: 'form-control' %>
      </div>
      
      <div class="field form-group">
        <label for="name">Enter emails of firend to invite to this group</label>
        <input type="text" class="form-control" id="emails" placeholder="emails of people to invite separated by ;">
      </div>
      
      <div class="actions form-group">
        <%= f.submit "Validate", class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>