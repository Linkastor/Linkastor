<div class="panel panel-default">
  <div class="panel-body">
    <h4>Invite someone :</h4>
    <%= form_tag(group_invites_path(@group)) do %>
      <div class="form-group">
        <input id="emails" name="emails" class="form-control" type="text" placeholder="emails separated by ;" value="<%= @invalid_emails %>" />
      </div>
      <%= submit_tag "Invite", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>