<div class="page-header">
	<h1><%= @title %></h1>
</div>
<div class="panel panel-default">
  <div class="panel-body">
    <i class="glyphicon glyphicon-plus"></i><%= link_to 'Create a new group', new_group_path() %>
  </div>
</div>
<% @groups.each do |group| %>
	<div class="jumbotron">
		<h4><%= link_to group.name, group_path(group) %></h4>
		<ul class="list-inline">
		<% group.users.each do |user| %>
			<a href="http://twitter.com/<%= user.nickname %>" target="_blank"><img src="<%= user.avatar %>" alt="<%= user.name %>" /></a>
		<% end %>
		</ul>
	</div>
<% end %>
