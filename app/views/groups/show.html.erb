<div class="page-header">
	<h1><%= @group.name %></h1>
</div>

<div class="row">
  <div class="col-md-8">
    <div id="links">
      <% if @links_by_day.blank? %>
        No links for now
      <% end %>

      <% @links_by_day.keys.each do |day| %>
        <div class="row">
          <ul class="list-unstyled">
            <% @links_by_day[day].each do |link| %>
              <li style="padding:5px;">
                <%= render partial: "shared/link", locals: { link: link} %>
              </li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>
    <div id="links_navigation">
      <%= will_paginate @links %>
    </div>
  </div>

	<div class="col-md-4">
    <%= render partial: "share_form" %>

    <%= render partial: "members_list" %>    

    <%= render partial: "invite_form" %>
    
    <%= render partial: "pending_invitations" %>
  </div>
</div>