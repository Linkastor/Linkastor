<div class="page-header">
	<h1><%= @title %></h1>
</div>

<div class="row">
  <div class="col-md-8">
    <div id="links">
    <% if @days.keys.length > 0 %>
        <% @days.keys.sort.reverse.each do |day| %>
          <div class="row">
            <h4 class="text-muted"><%= day.to_s(:day_title) %></h4>
            <ul class="list-unstyled">
              <% @days[day].sort_by {|obj| obj.created_at }.reverse.each do |link| %>
                <li style="padding:5px;">
                  <a href="http://twitter.com/<%= link.user.nickname %>" target="_blank"><img class="avatar img-circle" src="<%= link.user.avatar %>" alt="<%= link.user.name %>" /></a>&nbsp;&nbsp;<span class="link"><a href="<%= link.url %>" target="_blank"><%= link.title %></a></span>
                </li>
              <% end %>
            </ul>
          </div>
        <% end %>
      <% else %>
        No links for now
      <% end %>
    </div>
    <div id="links_navigation">
      <%= will_paginate @links %>
    </div>
  </div>

	<div class="col-md-4">
		<div class="panel panel-default">
		  <div class="panel-body">
		    <h4>Share a link :</h4>
			<form id="share_link" action="/api/v1/groups/<%= @group.id %>/links">
				<input id="token" type="hidden" value="<%= @token %>" /><br />
				<div class="form-group">
					<input id="url" name="url" class="form-control" type="text" placeholder="Url" />
				</div>
				<div class="form-group">
					<input id="title" name="title" class="form-control" type="text" placeholder="Title" />
				</div>
				<button type="submit" class="btn btn-primary">Share</button>
			</form>
		  </div>
		</div>
	</div>
</div>