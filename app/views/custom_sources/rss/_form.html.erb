<div class="row form">
  <div class="col-md-4 col-md-offset-4">
    <p class="form-title"> Add links from Rss to your daily digest </p>
    <%= form_tag(create_custom_source_path(type: "rss"), html: {class: 'form-horizontal'}) do %>    
      <%= render 'layouts/errors', object: custom_source %>
    
      <div class="field form-group">
        <label for="name">Rss url</label>
        <%= text_field_tag :url, nil, placeholder: "http://www.producthunt.com/feed", class: 'form-control' %>
      </div>
      
      <div class="actions form-group">
        <%= submit_tag "Validate", class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>